# HireCJ Homepage Configuration
# Copy this file to .env and update with your values

# Service identification
SERVICE_NAME=homepage
PORT=3000
NODE_ENV=development

# API URLs
VITE_API_URL=http://localhost:8000
VITE_AUTH_URL=http://localhost:8103
VITE_WS_URL=ws://localhost:8000

# Database (if using local DB)
DATABASE_URL=postgresql://hirecj:hirecj_dev_password@localhost:5432/hirecj_dev

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_AUTH=true

# Public URLs (for production)
VITE_PUBLIC_URL=https://hirecj.ai

# Analytics (optional)
VITE_GA_ID=
VITE_MIXPANEL_TOKEN=