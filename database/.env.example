# HireCJ Database Service Configuration
# Copy this file to .env and update with your values

# Service identification
SERVICE_NAME=database
APP_HOST=0.0.0.0
APP_PORT=8002

# Environment
APP_ENV=development
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://hirecj:hirecj_dev_password@localhost:5432/hirecj_dev

# OAuth Providers Configuration
# Freshdesk
FRESHDESK_CLIENT_ID=your_freshdesk_client_id
FRESHDESK_CLIENT_SECRET=your_freshdesk_client_secret
FRESHDESK_DOMAIN=your_domain.freshdesk.com

# Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Klaviyo
KLAVIYO_CLIENT_ID=your_klaviyo_client_id
KLAVIYO_CLIENT_SECRET=your_klaviyo_client_secret

# Storage Configuration
STORAGE_TYPE=postgres
CREDENTIALS_ENCRYPTION_KEY=your_encryption_key_here

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3