# HireCJ Monorepo Environment Variables
# Copy this file to .env and update with your values

# ======================
# Shared Infrastructure
# ======================
DATABASE_URL=postgresql://hirecj:hirecj_dev_password@localhost:5432/hirecj_dev
REDIS_URL=redis://localhost:6379
LOG_LEVEL=DEBUG

# ======================
# Agents Service
# ======================
AGENTS_SERVICE_NAME=agents
AGENTS_PORT=8000
AGENTS_HOST=0.0.0.0

# AI Provider Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CrewAI Configuration
CREWAI_API_KEY=your_crewai_api_key_here

# ======================
# Auth Service
# ======================
AUTH_SERVICE_NAME=auth
AUTH_PORT=8103
AUTH_HOST=0.0.0.0

# Security
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production

# OAuth Providers
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret
KLAVIYO_CLIENT_ID=your_klaviyo_client_id
KLAVIYO_CLIENT_SECRET=your_klaviyo_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Ngrok (for local OAuth testing)
NGROK_DOMAIN=your-domain.ngrok.io

# ======================
# Database Service
# ======================
DATABASE_SERVICE_NAME=database
DATABASE_PORT=8002
DATABASE_HOST=0.0.0.0

# ======================
# Homepage Service
# ======================
HOMEPAGE_SERVICE_NAME=homepage
HOMEPAGE_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_AUTH_URL=http://localhost:8103
VITE_WS_URL=ws://localhost:8000

# ======================
# Knowledge Service
# ======================
KNOWLEDGE_SERVICE_NAME=knowledge
KNOWLEDGE_PORT=8001
KNOWLEDGE_HOST=0.0.0.0

# LightRAG Configuration
LIGHTRAG_API_KEY=your_lightrag_api_key_here
LIGHTRAG_WORKING_DIR=./lightrag_transcripts_db

# ======================
# Heroku Deployment
# ======================
HEROKU_AGENTS_APP=hirecj-agents
HEROKU_AUTH_APP=hirecj-auth
HEROKU_HOMEPAGE_APP=hirecj-website
HEROKU_DATABASE_APP=hirecj-database
HEROKU_KNOWLEDGE_APP=hirecj-knowledge