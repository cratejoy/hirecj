# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8103
DEBUG=True
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://hirecj:hirecj_dev_password@localhost:5435/hirecj_auth

# Security Configuration
JWT_SECRET=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# OAuth Configuration - Login Providers
# Get these from https://partners.shopify.com under your app settings
SHOPIFY_CLIENT_ID=your_shopify_app_client_id_here
SHOPIFY_CLIENT_SECRET=your_shopify_app_client_secret_here
SHOPIFY_SCOPES=read_products,read_orders,read_customers

# OAuth Configuration - Data Providers
KLAVIYO_CLIENT_ID=your_klaviyo_client_id
KLAVIYO_CLIENT_SECRET=your_klaviyo_client_secret

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FRESHDESK_CLIENT_ID=your_freshdesk_client_id
FRESHDESK_CLIENT_SECRET=your_freshdesk_client_secret

# OAuth Redirect Configuration
OAUTH_REDIRECT_BASE_URL=http://localhost:8103
FRONTEND_URL=http://localhost:3456
FRONTEND_SUCCESS_PATH=/auth/success
FRONTEND_ERROR_PATH=/auth/error

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3456","http://localhost:8000"]

# Ngrok Tunnel Configuration (optional, for local OAuth testing)
# NGROK_DOMAIN=your-domain.ngrok-free.app
# NGROK_ENABLED=false