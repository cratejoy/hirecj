# ================================================
# AUTH SERVICE SECRETS TEMPLATE
# ================================================
# Copy this file to .env.secrets and fill in your values
# DO NOT COMMIT .env.secrets TO VERSION CONTROL

# Security Configuration
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-encryption-key-here

# ================================================
# OAUTH PROVIDER CREDENTIALS
# ================================================

# Shopify OAuth (Login Provider)
# Get these from https://partners.shopify.com under your app settings
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret
SHOPIFY_SCOPES=read_products,read_orders,read_customers

# Shopify Custom App Install Link
# Get this from your Shopify Partners dashboard after selecting "Custom distribution"
SHOPIFY_CUSTOM_INSTALL_LINK=https://admin.shopify.com/oauth/install_custom_app?client_id=your_client_id&signature=...

# Klaviyo OAuth (Data Provider)
KLAVIYO_CLIENT_ID=your_klaviyo_client_id
KLAVIYO_CLIENT_SECRET=your_klaviyo_client_secret

# Google OAuth (Data Provider)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Freshdesk OAuth (Data Provider)
FRESHDESK_CLIENT_ID=your_freshdesk_client_id
FRESHDESK_CLIENT_SECRET=your_freshdesk_client_secret